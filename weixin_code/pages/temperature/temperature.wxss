.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f6f6f6;
  position: fixed;
}

.temp_wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200px;
  width: 70%;
  background-color: #ffffff; 
}

.wrap {
  display: flex;
  height: 200px;
}

.wrap #temp {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 200px;
  font-size: 80px;
  font-family: 'DIN';
  color: #303030;
}

.wrap #text{
  font-size: 20px;
  font-weight: bold;
  color: #303030;
  margin-top: 65px;
}

.word_wrap {
  display: flex;
  flex-direction: column;
  height: 50px;
  width: 70%;
  background-color: #f8e411;
}

.word_wrap #temp_text {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100px;
  font-size: 20px;
  color: #303030;
}